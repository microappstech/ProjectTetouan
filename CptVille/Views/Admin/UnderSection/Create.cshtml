@model UnderSection
@{
    Layout = "_AdminLayout";
}
<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-sm-6 col-lg-3">
                    <div class="card card-inverse card-primary">
                        <div class="card-block p-b-5">
                            <h4 class="m-b-1">15</h4>
                            <h6>عدد المقالات</h6>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="card card-inverse card-info">
                        <div class="card-block p-b-5">
                            <h4 class="m-b-1">100</h4>
                            <h6>عدد الفئات الرئيسية</h6>
                        </div>
                    </div>
                </div>
                <!--/col-->

                <div class="col-sm-6 col-lg-3">
                    <div class="card card-inverse card-warning">
                        <div class="card-block p-b-5">
                            <h4 class="m-b-1">9</h4>
                            <h6>عدد الفئات الفرعية</h6>
                        </div>
                    </div>
                </div>
                <!--/col-->

                <div class="col-sm-6 col-lg-3">
                    <div class="card card-inverse card-danger">
                        <div class="card-block p-b-5">
                            <h4 class="m-b-1">8</h4>
                            <h6>الفئات الخاصة بالمشاريع منجزة</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--/.container-fluid-->

    <div class="card">
        <div class="card-header">
            <strong>إنشاء فئة الرئيسية </strong> 
        </div>
        <div class="card-block">
            <form asp-controller="UnderSection" asp-action="Create" method="post" class="form-horizontal ">
                <div class="form-group row">
                    <label class="col-md-2 form-control-label" for="hf-email">الإسم الفئة الثانوية</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Name, new {@placeholder="الإسم الفئة الثانوية", @class = "form-control", @required="true"})
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 form-control-label" for="hf-email">الإسم الفئة الثانوية</label>
                    <div class="col-md-9">
                        <select asp-for="MainSectionId" class="form-control" required="true" oninvalid="this.setCustomValidity('إختر الفئة الرئيسية')" oninput="setCustomValidity('')"
                                asp-items="@(new SelectList(ViewBag.Sections,"Id","Name"))">
                            <option value="">إختر الفئة الرئيسية</option>
                        </select>
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-sm btn-primary p-x-3" style="padding-top:8px; padding-bottom:8px;"><i class="fa fa-dot-circle-o"></i> حفظ</button>
                </div>
            </form>
        </div>

                
</main>