@model UnderSection
@{
    Layout = "_AdminLayout";
}
<main class="main">
    <div class="card">
        <div class="card-header">
            <strong>تحديت فئة الرئيسية </strong>
        </div>
        <div class="card-block">

            <form asp-controller="UnderSection" asp-action="U" method="post" class="form-horizontal ">
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="hf-email">الإسم الفئة الثانوية</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Name, new {@placeholder="الإسم الفئة الثانوية", @class = "form-control"})

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="hf-email">الإسم الفئة الثانوية</label>

                    <select asp-for="MainSectionId" class="form-control col-md-6"
                            asp-items="@(new SelectList(ViewBag.Sections,"Id","Name"))">
                        <option>إختر الفئة الرئيسية</option>
                    </select>
                    <button type="submit" class="btn btn-sm btn-primary col-md-2 p-x-3" style="padding-top:8px; padding-bottom:8px;"><i class="fa fa-dot-circle-o"></i> حفظ</button>
                </div>
            </form>
        </div>
    </div>

                
</main>