@model IEnumerable<Blog>
@{
    Layout = "_Layout";
}
<div class="main d-block">
    @foreach (var blog in Model)
    {
        <div class="card row flex-row my-2">
            <div class="col-md-5 ">
                <img class="card-img-top" style="max-height:200px;" src="@blog.Image" alt="Card image cap">
            </div>
            <div class="card-body col-md-7" style="line-height: 2.5;">
                <h5 class="card-title"> @blog.Title</h5>
                <p class="card-text">تم النشر في : @DateOnly.FromDateTime(blog.CreationDate)</p>
                <a asp-controller="Admin" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-primary">أكمل القراءة</a>
            </div>
        </div>
    }
</div>